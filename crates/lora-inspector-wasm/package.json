{
	"name": "lora-inspector-wasm",
	"version": "1.0.0",
	"description": "",
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@babel/core": "^7.28.0",
		"@babel/preset-env": "^7.28.0",
		"@babel/preset-react": "^7.27.1",
		"@babel/register": "^7.27.1",
		"@biomejs/biome": "^1.9.4",
		"@playwright/test": "^1.51.1",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/react": "^16.3.0",
		"@tsconfig/node22": "^22.0.2",
		"@tsconfig/recommended": "^1.0.10",
		"@types/node": "^20.11.5",
		"@vitejs/plugin-react": "^4.7.0",
		"@vitest/coverage-v8": "^3.2.4",
		"autoprefixer": "^10.4.20",
		"ava": "^6.2.0",
		"c8": "^10.1.3",
		"cssnano": "^7.0.6",
		"esmock": "^2.7.1",
		"jsdom": "^26.1.0",
		"postcss": "^8.4.47",
		"postcss-cli": "^11.0.0",
		"postcss-preset-env": "^10.0.9",
		"typescript": "^5.9.2",
		"vite": "^5.4.10",
		"vite-plugin-wasm": "^3.3.0"
	},
	"type": "module",
	"scripts": {
		"dev": "vite --host 0.0.0.0",
		"build": "vite build",
		"test": "yarn test:ava && yarn test:vitest",
		"test:ava": "ava",
		"test:vitest": "vitest run",
		"test:vitest:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"preview": "vite preview",
		"format": "biome format assets --write",
		"lint": "biome lint assets",
		"e2e-test": "PW_TEST_CONNECT_WS_ENDPOINT=ws://127.0.0.1:3030/ BASE_URL=http://hostmachine:4173 npx playwright@1.51.1 test"
	},
	"c8": {
		"include": [
			"assets/js/**/*.js",
			"assets/js/**/*.jsx"
		],
		"exclude": [
			"tests/**",
			"dist/**",
			"node_modules/**",
			"**/*.config.js",
			"**/*.wasm",
			"assets/js/lora-inspector*.js",
			"assets/js/worker*.js"
		],
		"reporter": [
			"text",
			"html",
			"lcov"
		],
		"check-coverage": false,
		"lines": 60,
		"functions": 60,
		"branches": 50,
		"statements": 60
	},
	"ava": {
		"files": [
			"tests/**/*.test.js"
		],
		"ignore": [
			"e2e-tests/**",
			"dist/**",
			"node_modules/**"
		]
	},
	"packageManager": "yarn@4.9.1",
	"dependencies": {
		"@vitest/ui": "^3.2.4",
		"chartist": "^1.3.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"vitest": "^3.2.4",
		"wasm-feature-detect": "^1.8.0"
	}
}
